<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
    <ProgressBar
        android:id="@+id/dino_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="330dp"
        android:progressDrawable="@drawable/progress_background"
        android:layout_height="10dp"
        android:layout_marginTop="366dp"
        android:layout_marginLeft="33dp"
        android:progress="25"
        android:progressTint="@color/colorDino"
        />
    <ImageView
        android:layout_marginTop="357dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_star_black_24dp"
        android:layout_marginLeft="350dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="360dp"
        android:text="1"
        android:textSize="10sp"
        android:fontFamily="@font/notosans_bold"
        android:textColor="@color/realblack"/>

    <View
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/Gray"
        android:layout_marginTop="396dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="400dp"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/note_item" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_login_logo2" />
    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="20dp"
        android:background="@drawable/ic_mainpage_settings"/>


    <Button
        android:id="@+id/button_add_note"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="top|end"
        android:background="@drawable/ic_mainpage_addtask"
        android:layout_margin="18dp"
        />

</android.support.design.widget.CoordinatorLayout>