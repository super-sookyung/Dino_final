<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loading_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/intro_1"
        android:layout_marginTop="150dp"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:src="@drawable/intro_1"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/introtext_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#000000"
        tools:text="목표와 습관관리"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/notosans_bold"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/introtext_11"
        android:layout_below="@+id/introtext_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginTop="25dp"
        tools:text="이루고 싶은 목표나 습관을 등록하고\n 매일 한발짝씩 나아가요."
        android:layout_centerInParent="true"
        android:gravity="center"
        android:fontFamily="@font/notosans_regular" />

    <ImageView
        android:id="@+id/intro_11"
        android:layout_toLeftOf="@+id/intro_111"
        android:layout_marginRight="13dp"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/green_circle"
        android:layout_marginTop="630dp" />

    <ImageView
        android:id="@+id/intro_111"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/gray_circle"
        android:layout_marginTop="630dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/intro_1111"
        android:layout_toRightOf="@+id/intro_111"
        android:layout_marginLeft="13dp"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/gray_circle"
        android:layout_marginTop="630dp"/>


</RelativeLayout>